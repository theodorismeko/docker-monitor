# Docker Monitor Configuration
# Copy this file to .env in the project root and update the values

# =================
# REQUIRED SETTINGS
# =================

# Slack webhook URL - Get this from your Slack workspace
# Go to Slack Apps → Incoming Webhooks → Add New Webhook to Workspace
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# =================
# OPTIONAL SETTINGS
# =================

# Schedule and timing
DAILY_CHECK_TIME=09:00
TIMEZONE=UTC

# Docker configuration
DOCKER_SOCKET=unix://var/run/docker.sock

# Notification settings
NOTIFICATION_ENABLED=true

# Container filtering
INCLUDE_STOPPED_CONTAINERS=true
CONTAINER_NAME_FILTER=

# Logging
LOG_LEVEL=INFO 